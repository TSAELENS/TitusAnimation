<div class="gallery">
    {% if images is empty %}
        <p>Aucune image pour cette page.</p>
    {% else %}
        <div class="gallery-grid">
            {% for image in images %}
                <div class="gallery-item">
                    <img src="{{ asset('uploads/gallery/' ~ image.url) }}" alt="{{ image.title|e }}" />
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}
.gallery-item {
    text-align: center;
}
.gallery-item img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 2px 12px #0002;
}
.gallery-title {
    margin-top: 0.5rem;
    font-weight: 600;
}
</style>