{% extends 'base.html.twig' %}

{% block title %}Calendrier - Titus Animation{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">

  <h1 class="text-4xl font-bold text-gray-800 mb-4 text-center">Calendrier</h1>

  <div class="p-4 flex flex-col md:flex-row gap-4 items-start justify-center max-w-4xl mx-auto">

    <div class="flex flex-col items-center">
      <div id="calendar" class="jsCalendar p-4 rounded bg-white"></div>

      <div class="flex justify-center gap-6 text-sm mt-4">
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 bg-green-600 rounded-full inline-block"></span> Disponible
        </div>
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 bg-yellow-400 rounded-full inline-block"></span> Réservé
        </div>
        <div class="flex items-center gap-2">
          <span class="w-4 h-4 bg-gray-400 rounded-full inline-block"></span> Fermé
        </div>
      </div>
    </div>

    <div id="event-details" class="w-full md:w-1/3 p-4 rounded bg-white">
      <h2 class="text-xl font-bold mb-2">Détails</h2>
      <p class="text-gray-600">Cliquez sur une date du calendrier pour voir les détails.</p>
    </div>

  </div>
</div>

{{ encore_entry_link_tags('calendar') }}
{{ encore_entry_script_tags('calendar') }}

{% endblock %}
