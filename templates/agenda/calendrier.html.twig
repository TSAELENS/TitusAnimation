{% extends 'base.html.twig' %}

{% block title %}Calendrier - Titus Animation{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
  <h1 class="text-4xl font-bold text-gray-800 mb-4">Calendrier</h1>
  <div id="calendar"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialisation de FullCalendar dans le conteneur #calendar
    var calendarEl = document.getElementById('calendar');
    var calendar = new FullCalendar.Calendar(calendarEl, {
      // Déclarez les plugins dont vous avez besoin (assurez-vous de les avoir installés via npm ou via CDN)
      plugins: [ 'dayGrid', 'timeGrid', 'list' ],
      initialView: 'dayGridMonth',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,listWeek'
      },
      // Pour charger des événements depuis une API, décommentez et adaptez le bloc suivant :
      /*
      events: {
        url: '{{ path("api_events") }}',
        method: 'GET',
        failure: function() {
          alert('Erreur lors du chargement des événements.');
        }
      },
      */
    });
    calendar.render();
  });
</script>
{% endblock %}
