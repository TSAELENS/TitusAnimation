{% extends 'base.html.twig' %}

{% block title %}Agenda – Affiches{% endblock %}

{% block body %}
<section class="pt-28 pb-12 flex-grow">
  <div class="container mx-auto px-4 space-y-12">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-2">Agenda – Affiches</h1>
      <p class="text-gray-600">Découvrez les événements à venir.</p>
    </div>

{% for affiche in affiches %}

{% set mois_fr = {
  'January': 'janvier',
  'February': 'février',
  'March': 'mars',
  'April': 'avril',
  'May': 'mai',
  'June': 'juin',
  'July': 'juillet',
  'August': 'août',
  'September': 'septembre',
  'October': 'octobre',
  'November': 'novembre',
  'December': 'décembre'
} %}
{% set mois = mois_fr[affiche.date|date('F')] %}

<article class="max-w-5xl mx-auto flex flex-col md:flex-row bg-white rounded shadow overflow-hidden">
  <div class="md:w-1/2">
    <img src="{{ asset('uploads/affiches/' ~ affiche.image) }}" alt="{{ affiche.titre }}" class="w-full h-full object-cover">
  </div>
  <div class="md:w-1/2 p-6">
    <h2 class="text-2xl font-semibold mb-2">{{ affiche.titre }}</h2>
    <p class="text-gray-700 mb-2">{{ affiche.description }}</p>
    <p class="text-gray-600"><strong>Date :</strong>   {{ affiche.date|date('d') }} {{ mois }} {{ affiche.date|date('Y') }}</p>
    <p class="text-gray-600"><strong>Heure :</strong>   {{ affiche.date|date('H\\hi') }}</p>
    <p class="text-gray-600"><strong>Lieu :</strong> {{ affiche.lieu }}</p>
  </div>
</article>
{% else %}
<p class="text-center text-gray-500">Aucune affiche à afficher pour le moment.</p>


    {% endfor %}
  </div>
</section>
{% endblock %}
